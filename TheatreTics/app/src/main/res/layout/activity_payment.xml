<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >


    <TextView
        android:id="@+id/paymentorderId"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="300dp"

        android:layout_height="30dp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_marginTop="55dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/paymentphone"
        style="@android:style/Widget.Material.EditText"
        android:textAlignment="center"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="#E4DEDE"
        android:textColor="#000000"
        android:textColorHint="#807C7C"
        android:hint="Phone No"
        android:textSize="15sp"

        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/paymentorderId"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/paymenttransaction"
        style="@android:style/Widget.Material.EditText"
        android:textAlignment="center"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="#E4DEDE"
        android:textColor="#000000"
        android:textColorHint="#807C7C"
        android:hint="Transaction ID"
        android:textSize="15sp"

        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/paymentphone"
        android:layout_centerHorizontal="true"
        />

    <Spinner
        android:id="@+id/paymenttype"
        style="@android:style/Widget.Material.EditText"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_below="@+id/paymenttransaction"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#E4DEDE"
        android:entries="@array/paymenttypeitem"
        android:textAlignment="center"
        android:textColor="#000000"
        android:prompt="@string/payment_prompt"
        android:textSize="15sp" />
    <EditText
        android:id="@+id/paymentamount"
        style="@android:style/Widget.Material.EditText"
        android:textAlignment="center"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="#E4DEDE"
        android:textColor="#000000"
        android:textColorHint="#807C7C"
        android:hint="Total Amount"
        android:textSize="15sp"

        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/paymenttype"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/paymentconfirm"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="#9ba6de"
        android:text="Make Payment"


        android:layout_below="@+id/paymentamount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />




</RelativeLayout>


